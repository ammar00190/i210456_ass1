<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:background="#D1F2EB"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/arrowbackButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="start"
            android:background="@drawable/arrow2"
            android:layout_marginStart="25sp"
            android:layout_marginTop="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40sp"
            android:layout_marginTop="8sp"
            android:text="Add New Mentor"
            android:textColor="#2980B9"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_gravity="start">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="160sp"
            android:layout_marginTop="8sp"
            android:text="Help us expand!"
            android:textColor="#2980B9"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:background="#7FB3D5"
        android:gravity="top"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginTop="15sp">
            <Button
                android:id="@+id/video1"
                android:layout_width="100sp"
                android:layout_height="80sp"
                android:layout_marginStart="70sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/baseline_camera_indoor_24" />

            <Button
                android:id="@+id/photo1"
                android:layout_width="100sp"
                android:layout_height="80sp"
                android:layout_marginStart="50sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/baseline_camera_alt_24" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FDFEFE"
            android:layout_marginStart="30sp"
            android:layout_marginTop="5sp"
            >
        </TextView>
        <EditText
            android:id="@+id/myEditText1"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:background="@color/white"
            android:hint="  Enter Name"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="5sp"
            android:inputType="text"
            android:gravity="left|center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FDFEFE"
            android:layout_marginStart="30sp"
            android:layout_marginTop="7sp"
            >
        </TextView>
        <EditText
            android:id="@+id/myEditText2"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:background="@color/white"
            android:hint="  Enter Description"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="5sp"
            android:inputType="text"
            android:gravity="left|center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FDFEFE"
            android:layout_marginStart="30sp"
            android:layout_marginTop="7sp"
            >
        </TextView>
        <Spinner
            android:id="@+id/countrySpinner"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:gravity="start|center"
            android:background="@color/white"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="5sp" />
        <Button
            android:id="@+id/signupButton"
            android:layout_width="175sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#2980B9"
            android:text="Upload"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2980B9"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginStart="25sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/baseline_add_home_24" />
        <Button
            android:id="@+id/searchButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginStart="40sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/baseline_content_paste_search_24" />
        <Button
            android:id="@+id/plusButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginStart="40sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/baseline_add_circle_24" />
        <Button
            android:id="@+id/chatButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginStart="40sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/baseline_add_comment_24" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginStart="40sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/baseline_account_circle_24" />
    </LinearLayout>
</LinearLayout>

