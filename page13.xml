<?xml version="1.0" encoding="utf-8"?><LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:background="#7FB3D5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30sp">
            <Button
                android:id="@+id/leftarrowButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="start"
                android:background="@drawable/baseline_arrow_back_24"
                android:layout_marginStart="25sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:text="Book your session"
                android:textColor="#2980B9"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="start">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20sp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20sp">
                <TextView
                    android:layout_width="220sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30sp"
                    android:text="John Cooper"
                    android:textColor="#FFFFFF"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:layout_gravity="start">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="50sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜…"
                        android:textSize="24sp"
                        android:gravity="end"
                        android:textColor="#FFD700" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textSize="20sp"
                        android:gravity="end"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_p1_round"
                android:scaleType="centerCrop"
                android:layout_gravity="start"/>
        </LinearLayout>
        <View
            android:id="@+id/horizontalLine2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:text="$1500/Session"
                android:textColor="#FFD700"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
            <Button
                android:id="@+id/photo1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="60sp"
                android:layout_marginTop="0sp"
                android:background="@drawable/baseline_comment_bank_24" />
            <Button
                android:id="@+id/photo2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="0sp"
                android:layout_marginTop="0sp"
                android:background="@drawable/baseline_call_24" />
            <Button
                android:id="@+id/photo3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="0sp"
                android:layout_marginTop="0sp"
                android:background="@drawable/baseline_duo_24" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#D1F2EB">

        <ImageView

            android:id="@+id/imageView3"
            android:layout_marginStart="70sp"
            android:layout_width="250sp"
            android:layout_height="220dp"
            android:layout_gravity="start"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_calender_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:text="Available Time Slots"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30sp">
            <Button
                android:id="@+id/Button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#7FB3D5"
                android:textAllCaps="false"
                android:text="10.00 AM"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp" />
            <Button
                android:id="@+id/Button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#1F618D"
                android:textAllCaps="false"
                android:text="11.00 AM"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp" />
            <Button
                android:id="@+id/Button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#7FB3D5"
                android:textAllCaps="false"
                android:text="12.00 PM"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>
        <Button
            android:id="@+id/Button4"
            android:layout_width="180sp"
            android:layout_height="60sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#2980B9"
            android:textAllCaps="false"
            android:text="Book an Appointment"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>