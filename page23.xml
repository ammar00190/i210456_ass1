<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="35"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#ADD8E6"
        android:layout_weight="5"
        android:gravity="left">

        <ImageView
            android:id="@+id/back_to_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/arrow2">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booked Sessions"
            android:textColor="#3aa8c1"
            android:layout_marginStart="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#ADD8E6"
        android:layout_weight="5"
        android:gravity="left">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:src="@mipmap/profile_foreground"
            android:layout_gravity="left">
        </ImageView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="John Cooper
UX Designer @ Google"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ADD8E6">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="24th Dec 2023
1:00 PM"
                android:textColor="#FFFF00"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="0.5dp">
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#ADD8E6 "
        android:layout_weight="5"
        android:gravity="left">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:src="@mipmap/profile2_foreground"
            android:layout_gravity="top">
        </ImageView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Emma Phillips
Android Developer"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ADD8E6">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="1st Jan 2024
09:00 pm"
                android:textColor="#FFFF00"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="0.5dp">
            </TextView>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#ADD8E6"
        android:layout_weight="20"
        android:gravity="left">
    </LinearLayout>


</LinearLayout>