<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Top LinearLayout with a name and icons -->


    <RelativeLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:background="#009688"
        android:padding="16dp"


        >

        <!-- Icon Before Name -->
        <ImageView
            android:id="@+id/iconBeforeName"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/arrowback" />

        <!-- Name -->

        <!-- Icon After Name -->


        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="-40dp"
            android:layout_marginBottom="1dp"
            android:padding="18dp"
            android:paddingStart="150dp"
            android:paddingEnd="100dp"
            android:singleLine="true"
            android:text="R John "
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/communityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:paddingStart="150dp"
            android:paddingEnd="50dp"
            android:text="Community"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/iconAfterNamee2"
            android:layout_width="114dp"
            android:layout_height="93dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="139dp"
            android:padding="1dp"
            android:src="@mipmap/profile"

            />

        <ImageView
            android:id="@+id/iconAfterName"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/call" />


        <ImageView
            android:id="@+id/iconAfterName2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:padding="12dp"
            android:src="@drawable/icon3" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:layout_weight="20"
        android:background="#FFFEFE">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="#B2FF59"
            android:padding="10dp"
            android:text="Hello, how are you?"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:background="#80D8FF"
            android:padding="10dp"
            android:text="I'm good, thank you! How about you?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/messagesRecyclerView" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2B94A1"
        android:orientation="horizontal"
        android:padding="20dp">

        <!-- Icon before the message -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon1" />

        <!-- Text message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Type a message"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- First icon after the message -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gallery"
            android:layout_marginLeft="182dp"
            />

        <!-- Second icon after the message -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon2"
            android:layout_marginLeft="-82dp"


            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#009688"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/navIcon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon1"
            android:padding="12dp"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:id="@+id/navIcon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon2"
            android:padding="12dp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/navIcon3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon3"
            android:padding="12dp"
            android:layout_marginLeft="60dp" />
        <ImageView
            android:id="@+id/navIcon4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon4"
            android:padding="12dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>




</LinearLayout>
